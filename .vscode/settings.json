{
  // Workbench
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.expandMode": "singleClick",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",

  // Editor
  "editor.fontFamily": "DejaVuSansM Nerd Font",  
  "editor.fontSize": 12,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.tabSize": 2,
  "editor.find.addExtraSpaceOnTop": true,
  "editor.stickyScroll.enabled": false,
  "editor.suggestSelection": "first",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "relative",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.minimap.enabled": false,

  // Window
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "window.title": "ðŸ¥·",
  "window.zoomLevel": 2, 
  "window.nativeTabs": false,
  "window.customTitleBarVisibility": "never",
  "window.commandCenter": false,
  
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "onFocusChange", 

  // Terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontFamily": "DejaVuSansM Nerd Font",
  "terminal.integrated.fontSize": 10,

  // Error lens extension config 
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],

  // ESLint extension settings 
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
  ],

  // code-spell-checker extension settings
  "cSpell.userWords": [
    "antfu",
    "iconify",
    "nuxt",
    "pinia",
    "primevue",
    "sjkey",
    "tsup",
    "Unocss",
    "unplugin",
    "vuepic",
    "vueuse"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.symbolPath": "off",

  "css.lint.unknownAtRules": "ignore"
}